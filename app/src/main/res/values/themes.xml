<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChatApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- primary color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary color-->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="n">?attr/colorPrimaryVariant </item>
    </style>

    <style name="Base.Theme.ChatApplication.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your light theme here. -->
    <!-- primary color-->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary color-->
    <item name="colorSecondary">@color/colorPrimary</item>
    <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status Bar -->
    <item name="android:statusBarColor" tools:targetApi="n">?attr/colorPrimaryVariant </item>
    </style>





    <style name="Theme.ChatApplication" parent="Base.Theme.ChatApplication" />
</resources>